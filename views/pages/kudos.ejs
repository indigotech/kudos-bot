<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body>

<div class="container">
<h2>Kudos!</h2>

<table border="1">
	<thead>
    <tr>
    	<td>Permalink</td>
    	<td>Create Date</td>
    	<td>Recipient</td>
    	<td>Sender</td>
    	<td>Message</td>
    </tr>
    </thead>
    <tbody>
    <% results.forEach(function(r) { %>
    <tr>
        <td><a href="<%= r.permalink_url %>">Link</a></td>
        <td><%= r.create_date %></td>
        <td><a href="https://work.facebook.com/profile.php?id=<%= r.recipient %>"><%= r.recipient %></a></td>
        <td><a href="https://work.facebook.com/profile.php?id=<%= r.sender %>"><%= r.sender %></a></td>
        <td><%= r.message %></td>
    </tr>
    <% }); %>
    </tbody>
</table>

</div>

</body>
</html>
